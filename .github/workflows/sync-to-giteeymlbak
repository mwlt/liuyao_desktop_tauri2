name: Mirror Github to Gitee

on:
  push:
    branches:
      - main
  release:
    types: [published]
  workflow_dispatch:  # å…è®¸æ‰‹åŠ¨è§¦å‘

jobs:
  repo-sync:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
        with:
          fetch-depth: 0  # è·å–å®Œæ•´å†å²è®°å½•
          
      - name: Mirror the Github repository to Gitee
        uses: Yikun/hub-mirror-action@v1.5
        with:
          src: github/mwlt
          dst: gitee/mwlt
          src_token: ${{ secrets.GH_PAT }}
          dst_token: ${{ secrets.GITEE_TOKEN }}
          account_type: user
          force_update: true
          static_list: "liuyao_desktop_tauri2"
          timeout: 600
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}

  notify-release:
    needs: repo-sync
    if: github.event_name == 'release'
    runs-on: ubuntu-latest
    steps:
      - name: Notify about new release
        run: |
          echo "ğŸ‰ æ–°ç‰ˆæœ¬å·²å‘å¸ƒ: ${{ github.event.release.tag_name }}"
          echo "ğŸ“¦ Release åç§°: ${{ github.event.release.name }}"
          echo "ğŸ”— GitHub Release: ${{ github.event.release.html_url }}"
          echo ""
          echo "âš ï¸  è¯·æ‰‹åŠ¨åˆ° Gitee ä»“åº“æ£€æŸ¥ Release æ˜¯å¦åŒæ­¥æˆåŠŸ"
          echo "ğŸŒ Gitee ä»“åº“: https://gitee.com/mwlt/liuyao_desktop_tauri2"
          echo ""
          echo "å¦‚æœ Release æœªè‡ªåŠ¨åŒæ­¥ï¼Œè¯·æ‰‹åŠ¨åˆ›å»ºï¼š"
          echo "1. è®¿é—® https://gitee.com/mwlt/liuyao_desktop_tauri2/releases"
          echo "2. ç‚¹å‡» 'å‘è¡Œç‰ˆ' -> 'åˆ›å»ºå‘è¡Œç‰ˆ'"
          echo "3. ä½¿ç”¨æ ‡ç­¾: ${{ github.event.release.tag_name }}"
